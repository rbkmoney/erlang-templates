# Generic configuration for ErlangLS
# User-specific settings go to global config
# (consult with https://erlang-ls.github.io/configuration/)

apps_dirs:
- "apps/*"
deps_dirs:
- "_build/default/lib/*"
- "_build/test/lib/*"
include_dirs:
- "include"
- "apps"
- "apps/*/include"
- "_build/*/lib/"
- "_build/*/lib/*/include"
